model Session {
  id        String   @id @default(cuid())
  userId    String
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Account {
  id                    String    @id @default(cuid())
  userId                String
  refreshToken          String?   @map("refresh_token")
  accessToken           String?   @map("access_token")
  scope                 String?
  idToken               String?   @map("id_token")
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  accessTokenExpiresAt  DateTime? @map("access_token_expires_at")
  accountId             String    @unique
  password              String?
  providerId            String
  refreshTokenExpiresAt DateTime? @map("refresh_token_expires_at")
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("accounts")
}

model Verification {
  id         String    @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt

  @@map("verification")
}

// Temporary storage for OAuth registration preferences across devices
model PendingRegistration {
  id          String   @id @default(cuid())
  email       String   @unique
  authType    Int      // 1 = simple, 2 = professional
  role        Int?     // 2 = freelancer, 3 = company (only for professional)
  username    String?  // Preferred username
  displayName String?  // Preferred display name (for professionals)
  createdAt   DateTime @default(now())
  expiresAt   DateTime // Auto-expire after 24 hours

  @@map("pending_registrations")
}
